@model Cliente

<form asp-controller="Cliente" asp-action="Create" method="POST">
    <h3 class=" titulo rounded-3 card p-3">Cadastrar Cliente</h3>
    <br />
   <div class="cardCadastro card p-3">
        <div>
          <div class="form-group">
           <label> Nome </label>
           <input asp-for="Nome" class="form-control" />
           <span asp-validation-for="Nome"></span>
          </div>
        <div class="form-group">
            <label>E-mail</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label>Senha</label>
            <input asp-for="Senha" class="form-control" maxlength="20"/>
            <span asp-validation-for="Senha"></span>
        </div>
        <div class="form-group">
            <label>Status [1 - Ativo, 2 - Inativo]</label>
            <input asp-for="statusCli" class="form-control" />
            <span asp-validation-for="statusCli"></span>
        </div>
        <div class="form-group">
            <label>Foto</label>
            <input asp-for="Foto" class="form-control" />
            <span asp-validation-for="statusCli"></span>
        </div>
       </div>
    </div>
    <br />
    <button style="align-items:center; font-size: 30px; width:300px;" class="card p-2 btn-primary mx-auto">Cadastrar</button>
    <br />
</form>