@model Cliente
@section scripts {
    <script>
        document.getElementById("menu_navegacao").style.display = "none";
    </script>
}
<form asp-controller="Login" asp-action="VerificaUsuario" method="POST">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header text-center">
                        <h2 class="text-primary">Login</h2>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="email" class="font-weight-bold">E-mail:</label>
                                <input type="email" asp-for="Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="password" class="font-weight-bold">Senha:</label>
                                <input type="password" asp-for="Senha" class="form-control">
                            </div>
                            <div class="form-group text-center">
                                <button style="font-size: 18px;" class="btn btn-primary btn-block">Entrar</button>
                            </div>
                            <div class="form-group text-center">
                                <p>Não tem uma conta? <a href="/Cliente/Create" class="btn btn-link">Cadastrar</a> <img src="~/images/NeuvEC.png" class="img-fluid" alt="NeuvEC"></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>